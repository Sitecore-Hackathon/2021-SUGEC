<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
    <ExternalReview>
        <FormDialog Icon="Network/32x32/link.png" Style="height: 200%" Header="Generate Review Link" Text="Create a link for external reviewers" OKButton="Create" CancelButton="false">
            <CodeBeside Type="SUGEC.Web.Commands.CreateExternalReview,SUGEC.Web"/>

            <div class="scStretch" >
                <div class="col2">
                    <Border Background="transparent" Border="none" GridPanel.VAlign="top" Padding="4px 0px 0px 0px">
                        <GridPanel Class="scFormTable" CellPadding="2" Columns="2" Width="100%" GridPanel.Height="100%">
                            <Label For="ExpirationDate" GridPanel.NoWrap="true">
                                <Literal Text="Expiration Date:" />
                            </Label>
                            <DateTimePicker ID="ExpirationDate" Width="100%" />
                        </GridPanel>
                    </Border>
                </div>
            </div>
        </FormDialog>
    </ExternalReview>
</control>